<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FabAppearance" parent="AppTheme">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:gravity">center</item>
    </style>


    <!--LIST ITEM STYLES-->

    <style name="ListItemTransformerTitleAppearance" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:includeFontPadding">false</item>

        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ListItemTransformerTextAppearance" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:lines">1</item>

        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ListItemTransformerSubTextAppearance" parent="AppTheme">
        <item name="android:gravity">start|top</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:includeFontPadding">false</item>

        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ListItemTransformerRatingAppearance" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:textSize">30sp</item>
        <item name="subtitleTextStyle">@style/ListItemTransformerTextAppearance</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>